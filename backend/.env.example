# Krishi Saarthi Backend Environment Variables
# Copy this file to .env and add your actual values

# Application Configuration
DEBUG=false
HOST=0.0.0.0
PORT=8000

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# GPU Server Configuration
GPU_SERVER_BASE_URL=http://your-server:8000
GPU_HEALTH_ENDPOINT=/api/health/detailed
VLLM_GENERATE_ENDPOINT=/api/vllm/generate
GPU_TIMEOUT_SECONDS=30

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# YouTube Recommender Configuration
# Get Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Get YouTube API key from: Google Cloud Console → APIs & Services → Credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# Firebase Configuration (Option 1: Service Account JSON file path)
FIREBASE_SERVICE_ACCOUNT_PATH=./app/services/youtube_recommender/firebase-service-account.json

# Firebase Configuration (Option 2: Individual environment variables)
# Get these from Firebase Console → Project Settings → Service Accounts
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com

# YouTube Search Configuration (Optional - defaults provided)
YOUTUBE_MAX_RESULTS=15
YOUTUBE_SEARCH_LANGUAGES=hi,en
YOUTUBE_VIDEO_DURATION=medium  # short, medium, long
